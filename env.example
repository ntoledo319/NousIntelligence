# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here
PORT=8080

# Database Configuration
DATABASE_URL=sqlite:///database.db
SQLALCHEMY_TRACK_MODIFICATIONS=False

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8080/auth/google/callback

# Spotify API Configuration (optional)
SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret
SPOTIFY_REDIRECT_URI=http://localhost:8080/callback/spotify

# OpenRouter API Configuration (for AI features)
OPENROUTER_API_KEY=your-openrouter-api-key

# Hugging Face Configuration (for voice emotion analysis)
HUGGINGFACE_API_TOKEN=your-huggingface-api-token

# Beta Testing Configuration
ENABLE_BETA_MODE=true
BETA_ACCESS_CODE=BETANOUS2025
MAX_BETA_TESTERS=30

# Security Configuration
SESSION_LIFETIME_DAYS=7
RATELIMIT_DEFAULT=200 per hour

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes

# Logging Configuration
LOG_LEVEL=INFO 