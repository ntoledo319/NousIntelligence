# Environment Variables Configuration
# Copy this file to .env and set appropriate values

# CRITICAL: Session Secret Key (Required)
# Generate a secure 32+ character random string
SESSION_SECRET=your-secure-32-character-secret-key-here

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost/nous_db
# For development, you can use SQLite:
# DATABASE_URL=sqlite:///instance/nous.db

# Google OAuth Configuration (Optional - for Google Sign-in)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# AI Service Configuration (Optional)
OPENAI_API_KEY=your-openai-api-key
OPENROUTER_API_KEY=your-openrouter-api-key
GEMINI_API_KEY=your-gemini-api-key

# Flask Configuration
FLASK_ENV=production
DEBUG=false
PORT=8080
HOST=0.0.0.0

# Security Configuration
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Email Configuration (Optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_VOICE_FEATURES=true
ENABLE_AI_FEATURES=true
ENABLE_NOTIFICATIONS=true

# Security Settings
MAX_CONTENT_LENGTH=16777216  # 16MB
SESSION_TIMEOUT=86400  # 24 hours in seconds
RATE_LIMIT_PER_MINUTE=60

# Performance Settings
DB_POOL_SIZE=5
DB_POOL_TIMEOUT=30
CACHE_TIMEOUT=300  # 5 minutes